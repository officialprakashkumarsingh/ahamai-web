# AhamAI Environment Configuration

# =====================================================
# AI PROVIDER API KEYS (Configure at least one)
# =====================================================

# OpenAI (Recommended)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Claude
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google Generative AI (Gemini)
GOOGLE_GENERATIVE_AI_API_KEY=your_google_api_key_here

# Groq
GROQ_API_KEY=your_groq_api_key_here

# DeepSeek
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Fireworks AI
FIREWORKS_API_KEY=your_fireworks_api_key_here

# xAI (Grok)
XAI_API_KEY=your_xai_api_key_here

# Azure OpenAI (requires both)
AZURE_API_KEY=your_azure_api_key_here
AZURE_RESOURCE_NAME=your_azure_resource_name_here

# Ollama (local AI models)
OLLAMA_BASE_URL=http://localhost:11434

# OpenAI Compatible API (requires both)
OPENAI_COMPATIBLE_API_KEY=your_compatible_api_key_here
OPENAI_COMPATIBLE_API_BASE_URL=https://your-compatible-api-url.com

# =====================================================
# SEARCH PROVIDERS (Optional)
# =====================================================

# Tavily Search
TAVILY_API_KEY=your_tavily_api_key_here

# Exa Search
EXA_API_KEY=your_exa_api_key_here

# SearXNG (self-hosted search)
SEARXNG_API_URL=http://localhost:8080

# Serper (video search)
SERPER_API_KEY=your_serper_api_key_here

# =====================================================
# DATABASE & STORAGE (Optional)
# =====================================================

# Supabase (for user authentication and chat history)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Redis (for caching)
USE_LOCAL_REDIS=false
LOCAL_REDIS_URL=redis://localhost:6379
UPSTASH_REDIS_REST_URL=your_upstash_redis_url_here
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token_here

# =====================================================
# APPLICATION SETTINGS
# =====================================================

# Enable chat history saving (requires Supabase)
ENABLE_SAVE_CHAT_HISTORY=true

# Enable share functionality
NEXT_PUBLIC_ENABLE_SHARE=true

# Base URL for the application
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Search configuration
SEARCH_API=searxng
SEARXNG_DEFAULT_DEPTH=basic
SEARXNG_ENGINES=google,bing,duckduckgo,wikipedia
SEARXNG_MAX_RESULTS=50

# Tool-specific settings
JINA_API_KEY=your_jina_api_key_here
NEXT_PUBLIC_OLLAMA_TOOL_CALL_MODEL=your_ollama_model_here